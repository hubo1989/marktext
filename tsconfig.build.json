{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/types",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/test/**/*",
    "**/*.js"
  ]
}

